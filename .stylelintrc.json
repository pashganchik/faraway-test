{
    "__comment__": "please see https://stylelint.io/, https://github.com/stylelint/stylelint-config-recommended, https://www.npmjs.com/package/stylelint-scss",
    "extends": "stylelint-config-recommended",
    "plugins": ["stylelint-scss", "stylelint-declaration-use-variable"],
    "rules": {
        "no-empty-source": null,
        "block-no-empty": null,
        "scss/dollar-variable-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
        "sh-waqar/declaration-use-variable": [["/color/", "z-index", "font-size", { "ignoreValues": ["transparent", "inherit", "/calc/"] }]],
        "no-descending-specificity": null
    }
}
